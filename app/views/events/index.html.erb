<p id="notice"><%= notice %></p>
<%= link_to 'Add New Event ', new_event_path %></br>
<%= link_to 'Events list ', events_path %></br>
<%= link_to 'User Owe Details ', user_owe_details_path %></br>
<%= link_to 'User Event Details list ', user_event_details_path %>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Date</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= event.amount %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
